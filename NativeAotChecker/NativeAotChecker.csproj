<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <TargetFramework>net10.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <NoDefaultLaunchSettingsFile>true</NoDefaultLaunchSettingsFile>
        <InvariantGlobalization>true</InvariantGlobalization>
        <PublishAot>true</PublishAot>
        <IsPackable>false</IsPackable>
        <!-- <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles> -->
        <!-- <CompilerGeneratedFilesOutputPath>GeneratedFiles</CompilerGeneratedFilesOutputPath> -->
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)' == 'Release'">
        <ExportSwaggerDocs>true</ExportSwaggerDocs>
    </PropertyGroup>
    <Import Project="..\Src\Swagger\FastEndpoints.Swagger.targets"/>

    <ItemGroup>
        <!-- <Compile Remove="GeneratedFiles\**"/> -->
        <None Remove="NativeAotChecker.csproj.DotSettings"/>
        <Content Remove="aot\**"/>
        <None Remove="aot\**"/>
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\Src\Generator\FastEndpoints.Generator.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false"/>
        <ProjectReference Include="..\Src\Library\FastEndpoints.csproj"/>
        <ProjectReference Include="..\Src\Security\FastEndpoints.Security.csproj"/>
        <ProjectReference Include="..\Src\Swagger\FastEndpoints.Swagger.csproj"/>
        <PackageReference Include="Scalar.AspNetCore" VersionOverride="2.12.30"/>
    </ItemGroup>

</Project>