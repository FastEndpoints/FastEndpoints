<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>

        <Version>2.21.0-beta13</Version>

        <PackageReleaseNotes>
            - specify configuration at startup
            - endpoint versioning (experimental)
            - configure global route prefix
            - set tags for endpoints
            - exclude endpoints during startup
            - specify error response builder func
            - specify request deserializer func
            - specify response serializer func
            - allow any content-type for plain text requests
            - change error response content type to "application/problem+json"
            - add ConfigureDefaults() for swagger ui settings
            - add versioning support for swagger
            - add tagIndex parameter for AddSwagger/AddNSwag
            - fix issue #21 with swagger gen
            - reduce allocations during endpoint registration
            - misc. refactors and optimizations
        </PackageReleaseNotes>

        <TargetFramework>net6.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <OutputType>Library</OutputType>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <NoWarn>1701;1702;CS1591;CS1573,CA2254;RCS1079;CS8618</NoWarn>
        <Authors>Đĵ ΝιΓΞΗΛψΚ</Authors>
        <Description>A light-weight REST Api framework for ASP.Net 6 that implements REPR (Request-Endpoint-Response) Pattern.</Description>
        <PackageProjectUrl>https://fast-endpoints.com/</PackageProjectUrl>
        <RepositoryUrl>https://github.com/dj-nitehawk/FastEndpoints.git</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageIcon>icon.png</PackageIcon>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageTags>http, rest, rest-api, web-api, webapi, aspnet, aspnetcore, dotnet6, minimal-api, vertical-slice-architecture, repr-pattern</PackageTags>
    </PropertyGroup>

    <ItemGroup>
        <FrameworkReference Include="Microsoft.AspNetCore.App" />
        <ProjectReference Include="..\Validation\FastEndpoints.Validation.csproj" />
    </ItemGroup>

    <ItemGroup>
        <Folder Include="Properties\" />
    </ItemGroup>

    <ItemGroup>
        <None Include="..\..\README.md" Pack="true" PackagePath="\" Link="Content\Readme" />
        <None Include="..\Documentation\images\icon.png" Pack="true" PackagePath="\" Link="Content\Icon" />
    </ItemGroup>

    <ItemGroup>
        <InternalsVisibleTo Include="Test" />
    </ItemGroup>

</Project>